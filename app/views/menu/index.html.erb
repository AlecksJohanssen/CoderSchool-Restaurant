<h1>Menu#index</h1>

<form class="form-inline">
  <div class="form-group">
   <ul class="nav nav-pills">
  <% @sections.each do |section| %>
    <li class="nav-item">
      <%= link_to section, menu_path(section: section), class: "nav-link #{params[:section] == section && 'active'}" %>
  <% end %>
    </li>
</ul>
  </div>
  <div class="form-group">
    <div class="btn-group">
  <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Action
  </button>
  <div class="dropdown-menu">
    <% @sections.each do |section| %>
    <%=link_to "#{section} Sort By",menu_path(:sort_param => "name",section: section),class: "dropdown-item"%>
    <%=link_to "Sort by Highest Price",menu_path(:decimal_param => "price"),class: "dropdown-item"%>
    <div class="dropdown-divider"></div>
     <% @cuisines.each do |cuisine| %>
    <a class="dropdown-item" href="#"><%= link_to cuisine,menu_path(cuisine: cuisine) %></a>
    <%end%>
    <%end%>
  </div>
</div>
    <form class="form-inline pull-xs-right">
      <input class="form-control" type="text" placeholder="Search">
      <button class="btn btn-success-outline" type="submit">Search</button>
    </form>
    </div>
</form>

<% @food_items.each do |item|%>
<div class="card" style="margin-top:50px">
  <div class="card-block">
    <%= link_to item.name, food_item_path(item), class: 'btn btn-default' %>
    <%= item.price%>
    <%= link_to 'Order Now', new_order_path(id: item.id), class: 'btn btn-primary' %>
  </div>
  <div class="card-block">
    <%= image_tag item.image_url_or_auto%>
  </div>
</div>
<% end %>
