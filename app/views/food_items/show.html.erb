<%= javascript_include_tag 'ratyrate.js', "data-turbolinks-track" => false %>
<div class="wrap">

<div class="card">
  <div class="card-block">
    <h4 class="card-title" style="text-align:center"><%= @food_item.name %></h4>
  </div>
  <div class="container ctn-1">

  <%= image_tag @food_item.image_url %>

  </div>
  <div class="card-block">
    <span class="label label-info total-count">
      View Counts:<%=@food_item.impressions.count %>
           </span>
    <p class="card-text" style="text-align:center"><%= @food_item.description %></p>
    <p class="card-text" style="text-align:center"><%= @food_item.price %></p>
    <p class="card-text" style="text-align:center"><%= @food_item.cuisine %></p>
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
</div>

<div class="row">
  <div class="small-2 large-2 columns" style="margin-left:50px">
    <%= imdb_style_rating_for @food_item, current_user%>
  </div>
  <br>
  <div class="small-2 large-4 columns" style="margin-left:50px">
  <% if current_user %>
    <%= rating_for @food_item, "visual_effects", enable_half: true %>
      <br>
      Original Score: <%= rating_for @food_item, "original_score" %>
      <br>
      Director: <%= rating_for @food_item, "original_score" %>
      <br>
      Custome Design: <%= rating_for @food_item, "custome_design" %>
    <%else%>
    <%= rating_for @food_item, "visual_effects", enable_half: true %>
      <br>
      Original Score: <%= rating_for @food_item, "original_score" %>
      <br>
      Director: <%= rating_for @food_item, "original_score" %>
      <br>
      Custome Design: <%= rating_for @food_item, "custome_design" %>
    <% end %>
  </div>
</div>
<%= link_to 'Edit', edit_food_item_path(@food_item) %> |
<%= link_to 'Back', food_items_path %>

</div>
